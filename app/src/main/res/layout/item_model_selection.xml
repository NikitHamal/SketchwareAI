<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="16dp"
    android:minHeight="56dp">

    <!-- Radio Button -->
    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="false"
        android:focusable="false" />

    <!-- Model Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Model Name -->
        <TextView
            android:id="@+id/text_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gemini 2.5 Flash"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="?attr/colorOnSurface"
            tools:text="Gemini 2.5 Flash" />

        <!-- Model Capabilities (optional) -->
        <LinearLayout
            android:id="@+id/layout_capabilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:visibility="gone">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_thinking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Thinking"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSecondaryContainer"
                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                app:chipMinHeight="24dp"
                style="@style/Widget.Material3.Chip.Assist" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_web_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Web Search"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSecondaryContainer"
                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                app:chipMinHeight="24dp"
                style="@style/Widget.Material3.Chip.Assist" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_vision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vision"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSecondaryContainer"
                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                app:chipMinHeight="24dp"
                style="@style/Widget.Material3.Chip.Assist" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>