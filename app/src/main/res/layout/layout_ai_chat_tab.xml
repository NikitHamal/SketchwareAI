<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <!-- Main Message Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Chat Messages RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_chat_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:paddingHorizontal="12dp"
            android:scrollbars="none"
            android:overScrollMode="ifContentScrolls" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <!-- AI Assistant Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mtrl_chat"
                    app:tint="?attr/colorOnPrimaryContainer" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Greeting Text -->
            <TextView
                android:id="@+id/text_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi! I'm your AI coding assistant"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I can help you write, debug, and improve your code. Ask me anything!"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center" />

        </LinearLayout>

    </FrameLayout>

    <!-- Bottom Input Area -->
    <LinearLayout
        android:id="@+id/layout_input_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorSurfaceContainer"
        android:elevation="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingHorizontal="16dp"
        android:minHeight="0dp"
        android:visibility="visible"
        android:layout_gravity="bottom">

        <!-- Attached files preview for current user message (FREE models) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_attached_files_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal" />

        <!-- Prompt Input Area (input above, tools below) -->
        <LinearLayout
            android:id="@+id/linear_prompt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_edittext_background_with_border"
            android:padding="8dp"
            android:minHeight="56dp">

            <!-- Input Field -->
            <EditText
                android:id="@+id/edit_text_ai_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:hint="Ask anything"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:minHeight="40dp" />

            <!-- Tools Row -->
            <LinearLayout
                android:id="@+id/layout_tools_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="32dp">

                <!-- Attach Button (visibility controlled in code) -->
                <ImageView
                    android:id="@+id/button_ai_attach"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:contentDescription="Attach files"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:src="@drawable/ic_mtrl_add" />

                <!-- Settings/Tune -->
                <ImageView
                    android:id="@+id/button_ai_settings"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:layout_marginStart="4dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="AI settings"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:src="@drawable/ic_mtrl_tune" />

                <!-- Model Selector (text-only, clickable) -->
                <LinearLayout
                    android:id="@+id/layout_model_selector_custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="8dp"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp">

                    <TextView
                        android:id="@+id/text_selected_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gemini 2.5 Flash"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Send Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_ai_send"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:minWidth="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_mtrl_arrow_right"
                    app:iconSize="18dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:cornerRadius="20dp"
                    android:contentDescription="Send message"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>